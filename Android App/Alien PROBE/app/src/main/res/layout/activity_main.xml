<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/alien_probe_logo"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/alien_probe_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="154dp"
        android:layout_height="68dp"
        android:text="@string/main_activity_text"
        app:layout_constraintTop_toTopOf="@id/guideline_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/wkulong"
        android:layout_width="253dp"
        android:layout_height="98dp"
        android:src="@drawable/wkulong"
        app:layout_constraintTop_toBottomOf="@id/alien_probe_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wkulong" />

    <Button
        android:id="@+id/btnViewSetup"
        android:layout_width="205dp"
        android:layout_height="75dp"
        android:text="@string/setup_button_home"
        app:layout_constraintTop_toBottomOf="@id/wkulong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnViewScanner"
        android:layout_width="205dp"
        android:layout_height="75dp"
        android:text="@string/scan_button_home"
        app:layout_constraintTop_toBottomOf="@id/btnViewSetup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
